extends layout

block content
  section.contact
    .container
      h1 Get In Touch
      p.subtitle I'd love to hear from you! Whether you have a project in mind or just want to say hello.
      
      .contact-content
        .contact-info
          h3 Contact Information
          .info-item
            strong Email:
            span  hello@myportfolio.com
          .info-item
            strong Location:
            span  Tokyo, Japan
          .info-item
            strong Available:
            span  For freelance projects
            
          .social-links
            h3 Connect With Me
            a.social-link(href='#') GitHub
            a.social-link(href='#') LinkedIn
            a.social-link(href='#') Twitter
            
        .contact-form
          h3 Send Me a Message
          form(method='post' action='/contact')
            .form-group
              label(for='name') Name
              input#name(type='text' name='name' required)
            .form-group
              label(for='email') Email
              input#email(type='email' name='email' required)
            .form-group
              label(for='message') Message
              textarea#message(name='message' rows='5' required)
            button.btn.btn-primary(type='submit') Send Message